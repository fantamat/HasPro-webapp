FROM python:3.13-slim AS final

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBUG=False \
    DATABASE_NAME=/app/data/db.sqlite3

WORKDIR /app

# Copy files needed for installation
COPY pyproject.toml ./pyproject.toml
COPY .python-version ./.python-version
COPY uv.lock ./uv.lock

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gettext \
    git && \
    rm -rf /var/lib/apt/lists/*

# Install Python dependencies with uv
RUN pip install uv && \
    uv venv && \
    uv sync && \
    uv pip install uvicorn && \
    pip uninstall -y uv

# activate the virtual environment
ENV PATH="/app/.venv/bin:$PATH"

# Copy app files
COPY data/codebase/haspro /app/haspro
COPY data/migrations/haspro_app /app/haspro/haspro_app/migrations
COPY data/migrations/users /app/haspro/users/migrations


WORKDIR /app/haspro

EXPOSE 8000

CMD ["uvicorn", "haspro_project.asgi:application", "--host", "0.0.0.0", "--port", "8000"]
